<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--тег <welcome-file-list> при запуске  нашего приложения эта страница является превой -->





    <!--Основная jsp страница администратора -->
    <servlet>
        <servlet-name>RentalAuto</servlet-name>
        <jsp-file>/carAdministrator.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>RentalAuto</servlet-name>
        <url-pattern>/car-create-jsp</url-pattern>
    </servlet-mapping>

    <!--Jsp страница администратора для User -->
    <servlet>
        <servlet-name>AdministratorUserJsp</servlet-name>
        <jsp-file>/userAdministratorJsp.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdministratorUserJsp</servlet-name>
        <url-pattern>/user-admin-jsp</url-pattern>
    </servlet-mapping>



    <!--Jsp страница при неудачной попытке создания чего-либо -->
    <servlet>
        <servlet-name>CarCreateError</servlet-name>
        <jsp-file>/errorPage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>CarCreateError</servlet-name>
        <url-pattern>/error-page</url-pattern>
    </servlet-mapping>

    <!--Jsp страница регистрации пользователя -->
    <servlet>
        <servlet-name>Registration</servlet-name>
        <jsp-file>/registrationPage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration-page</url-pattern>
    </servlet-mapping>

    <!--Jsp страница выбора действия для пользователя первоначальная -->
    <servlet>
        <servlet-name>MainPage</servlet-name>
        <jsp-file>/mainPage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainPage</servlet-name>
        <url-pattern>/main-page</url-pattern>
    </servlet-mapping>

    <!--Jsp страница входа сущетвующего пользователя -->
    <servlet>
        <servlet-name>InputPage</servlet-name>
        <jsp-file>/inputUserPage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>InputPage</servlet-name>
        <url-pattern>/input-pageJsp</url-pattern>
    </servlet-mapping>

    <!--Jsp страница просмотра авто -->
    <servlet>
        <servlet-name>ViewPage</servlet-name>
        <jsp-file>/viewCarJsp.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewPage</servlet-name>
        <url-pattern>/view-page</url-pattern>
    </servlet-mapping>






</web-app>